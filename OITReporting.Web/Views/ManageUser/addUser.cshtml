@model OITReporting.Manager.userReg
@{
    ViewBag.Title = "Add New User";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="inner_content">
    <!-- /inner_content_w3_agile_info-->
    <!-- breadcrumbs -->
    <div class="w3l_agileits_breadcrumbs">
        <div class="w3l_agileits_breadcrumbs_inner">
            <ul>
                <li><a href="~/Home/Dashboard">Home</a><span>«</span></li>
                <li>Manage User <span>«</span></li>
                <li>Add New User</li>
            </ul>
        </div>
    </div>
    <!-- //breadcrumbs -->
    <div style="padding-top:35px">
        @if (ViewBag.status != null)
        {
            <div class="alert alert-link alert-dismissable">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">×</a>
                <strong>@ViewBag.status</strong> 
            </div>
        }
    </div>

    <div class="inner_content_w3_agile_info two_in">
        <h2 class="w3_inner_tittle text-capitalize text-center">Add New User</h2>

        <!--/forms-->
        <div class="forms-main_agileits">

            <div class="forms-inner">

                <div class="wthree_general graph-form agile_info_shadow ">
                    <h3 class="w3_inner_tittle two">Fill the below from to add new user</h3>

                    <div class="grid-1 ">
                        <div class="form-body">
                            <form method="post" action="addUser" class="form-horizontal">
                                <div class="form-group">
                                    <label for="focusedinput" class="col-sm-2 control-label">
                                        @Html.LabelFor(model => model.firstName)
                                    </label>
                                    <div class="col-sm-8">
                                        @Html.TextBoxFor(model => model.firstName, string.Empty, htmlAttributes: new { @class = "form-control1", id = "focusedinput", placeholder = "Enter First Name" })
                                    </div>
                                    <div class="col-sm-2">
                                        <p class="help-block">
                                            @Html.ValidationMessageFor(model => model.firstName, string.Empty, htmlAttributes: new { @class = "alert-danger" })
                                        </p>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="lastName" class="col-sm-2 control-label">
                                        @Html.LabelFor(model => model.lastName)
                                    </label>
                                    <div class="col-sm-8">
                                        @Html.TextBoxFor(model => model.lastName, string.Empty, htmlAttributes: new { @class = "form-control1", id = "focusedinput", placeholder = "Enter Last Name" })
                                    </div>
                                    <div class="col-sm-2">
                                        <p class="help-block">
                                            @Html.ValidationMessageFor(model => model.lastName, "", htmlAttributes: new { @class = "alert-danger" })
                                        </p>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label for="lastName" class="col-sm-2 control-label">
                                        @Html.LabelFor(model => model.dob)
                                    </label>
                                    <div class="col-sm-8">
                                        <div class='input-group date' id='datetimepicker1'>
                                            @Html.TextBoxFor(model => model.dob, string.Empty, htmlAttributes: new { @class = "form-control1", type = "date", id = "focusedinput" })
                                            <span class="input-group-addon">
                                                <span class="glyphicon glyphicon-calendar"></span>
                                            </span>
                                        </div>
                                    </div>
                                    <div class="col-sm-2">
                                        <p class="help-block">
                                            @Html.ValidationMessageFor(model => model.dob, "", htmlAttributes: new { @class = "alert-danger" })
                                        </p>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="radio" class="col-sm-2 control-label">
                                        @Html.LabelFor(model => model.gender)
                                    </label>
                                    <div class="col-sm-8">
                                        <div class="radio block">
                                            <label>
                                                @Html.RadioButtonFor(model => model.gender, "Male", htmlAttributes: new { }) Male
                                            </label>
                                        </div>
                                        <div class="radio block">
                                            <label>
                                                @Html.RadioButtonFor(model => model.gender, "Female", htmlAttributes: new { }) Female
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-sm-2">
                                        <p class="help-block">
                                            @Html.ValidationMessageFor(model => model.gender, "", htmlAttributes: new { @class = "alert-danger" })
                                        </p>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="txtarea1" class="col-sm-2 control-label">
                                        @Html.LabelFor(model => model.address)
                                    </label>
                                    <div class="col-sm-8">
                                        @Html.TextAreaFor(model => model.address, 5, 5, htmlAttributes: new { @class = "form-control1" })
                                    </div>
                                    <div class="col-sm-2">
                                        <p class="help-block">
                                            @Html.ValidationMessageFor(model => model.address, "", htmlAttributes: new { @class = "alert-danger" })
                                        </p>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">
                                        @Html.LabelFor(model => model.country)
                                    </label>
                                    <div class="col-sm-8">
                                        @{
                                            var country = new List<SelectListItem> {
                                                new SelectListItem { Text = "India", Value = "India" },
                                                new SelectListItem { Text = "United State of America", Value = "United State of America" },
                                                new SelectListItem { Text = "Canada", Value = "Canada" } };
                                        }
                                        @Html.DropDownListFor(model => model.country, country, "Select Country", htmlAttributes: new { @class = "form-control1" })
                                    </div>
                                    <div class="col-sm-2">
                                        <p class="help-block">
                                            @Html.ValidationMessageFor(model => model.country, "", htmlAttributes: new { @class = "alert-danger" })
                                        </p>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-sm-2 control-label">
                                        @Html.LabelFor(model => model.state)
                                    </label>
                                    <div class="col-sm-8">
                                        @{
                                            var state = new List<SelectListItem> {
                                                new SelectListItem { Text = "Gujarat", Value = "Gujarat" },
                                                new SelectListItem { Text = "Maharastra", Value = "Maharastra" },
                                                new SelectListItem { Text = "Panjab", Value = "Panjab" } };
                                        }
                                        @Html.DropDownListFor(model => model.state, state, "Select State", htmlAttributes: new { @class = "form-control1" })
                                    </div>
                                    <div class="col-sm-2">
                                        <p class="help-block">
                                            @Html.ValidationMessageFor(model => model.state, "", htmlAttributes: new { @class = "alert-danger" })
                                        </p>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">
                                        @Html.LabelFor(model => model.city)
                                    </label>
                                    <div class="col-sm-8">
                                        @{
                                            var city = new List<SelectListItem> { new SelectListItem { Text = "Ahmedabad", Value = "Ahmedabad" },
                                                new SelectListItem { Text = "Gandhinagar", Value = "Gandhinagar" },
                                                new SelectListItem { Text = "Kalol", Value = "Kalol" } };
                                        }
                                        @Html.DropDownListFor(model => model.city, city, "Select City", htmlAttributes: new { @class = "form-control1" })
                                    </div>
                                    <div class="col-sm-2">
                                        <p class="help-block">
                                            @Html.ValidationMessageFor(model => model.city, "", htmlAttributes: new { @class = "alert-danger" })
                                        </p>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label for="lastName" class="col-sm-2 control-label">
                                        @Html.LabelFor(model => model.contactNo)
                                    </label>
                                    <div class="col-sm-8">
                                        @Html.TextBoxFor(model => model.contactNo, string.Empty, htmlAttributes: new { type = "number", maxlength = "10", @class = "form-control1", id = "lastnameinput", placeholder = "Enter 10 digit mobile number" })
                                    </div>
                                    <div class="col-sm-2">
                                        <p class="help-block">
                                            @Html.ValidationMessageFor(model => model.contactNo, "", htmlAttributes: new { @class = "alert-danger" })
                                        </p>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="lastName" class="col-sm-2 control-label">
                                        @Html.LabelFor(model => model.emailID)
                                    </label>
                                    <div class="col-sm-8">
                                        @Html.TextBoxFor(model => model.emailID, string.Empty, htmlAttributes: new { type = "email", @class = "form-control1", id = "lastnameinput", placeholder = "Enter Email Address" })
                                        @*<input type="email" class="form-control1" id="lastnameinput" placeholder="Enter Emaild Address">*@
                                    </div>
                                    <div class="col-sm-2">
                                        <p class="help-block">
                                            @Html.ValidationMessageFor(model => model.emailID, "", htmlAttributes: new { @class = "alert-danger" })
                                        </p>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="lastName" class="col-sm-2 control-label">
                                        @Html.LabelFor(model => model.password)
                                    </label>
                                    <div class="col-sm-8">
                                        @Html.PasswordFor(model => model.password, htmlAttributes: new { @class = "form-control1", id = "lastnameinput", placeholder = "Enter Password" })
                                        @*<input type="password" class="form-control1" id="lastnameinput" placeholder="Enter Password">*@
                                    </div>
                                    <div class="col-sm-2">
                                        <p class="help-block">
                                            @Html.ValidationMessageFor(model => model.password, "", htmlAttributes: new { @class = "alert-danger" })
                                        </p>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="lastName" class="col-sm-2 control-label">
                                        @Html.LabelFor(model => model.confirmPassword)
                                    </label>
                                    <div class="col-sm-8">
                                        @Html.PasswordFor(model => model.confirmPassword, htmlAttributes: new { @class = "form-control1", id = "lastnameinput", placeholder = "Enter Confirm Password" })
                                        @*<input type="password" class="form-control1" id="lastnameinput" placeholder="Enter Confirm Password">*@
                                    </div>
                                    <div class="col-sm-2">
                                        <p class="help-block">
                                            @Html.ValidationMessageFor(model => model.confirmPassword, "", htmlAttributes: new { @class= "alert-danger" })
                                        </p>
                                    </div>
                                </div>
                                <div>
                                    <button type="submit" class="btn btn-default">Submit</button>
                                    <a href="~/Home/Dashboard" class="btn btn-danger" role="button">Cancel</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!--//forms-inner-->
        </div>
        <!--//forms-->
    </div>
    <!-- //inner_content_w3_agile_info-->
</div>
